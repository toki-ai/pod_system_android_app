<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.tab.home.ProductDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Brand name -->
        <TextView
            android:id="@+id/tvBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FlexiPod"
            android:textColor="#025092"
            android:textStyle="bold"
            android:textSize="20sp" />

        <!-- Main image -->
        <ImageView
            android:id="@+id/imgMain"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_placeholder" />

        <!-- Image thumbnails -->
        <LinearLayout
            android:id="@+id/thumbnailContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:src="@drawable/ic_placeholder"
                android:scaleType="centerCrop"
                android:layout_margin="4dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:src="@drawable/ic_placeholder"
                android:scaleType="centerCrop"
                android:layout_margin="4dp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:src="@drawable/ic_placeholder"
                android:scaleType="centerCrop"
                android:layout_margin="4dp" />
        </LinearLayout>

        <!-- Room name + price -->
        <TextView
            android:id="@+id/tvRoomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng POD đôi"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.000 VND/tiếng"
            android:textColor="#23619C"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp" />

        <!-- Add to cart button -->
        <Button
            android:id="@+id/btnAddToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to cart"
            android:backgroundTint="#5681D9"
            android:textColor="@android:color/white" />

        <!-- Booking Form -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <!-- Date -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày đặt" />

            <EditText
                android:id="@+id/etDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="23/09/2020"
                android:focusable="false"
                android:inputType="none"
                android:drawableEnd="@drawable/ic_calendar" />

            <!-- Slot -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Slot" />

            <Spinner
                android:id="@+id/spSlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Room selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Chọn phòng" />

            <Spinner
                android:id="@+id/spRoom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Package -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Chọn gói" />

            <Spinner
                android:id="@+id/spPackage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Price summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giảm giá: -42.000 VND"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tổng giá: 1.280.000 VND"
                android:textStyle="bold"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <!-- Book button -->
        <Button
            android:id="@+id/btnBook"
            android:layout_width="match_parent"
            androi
