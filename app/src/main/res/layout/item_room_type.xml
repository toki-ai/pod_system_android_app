<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content">

        <!-- Image -->
        <ImageView
            android:id="@+id/iv_room_image"
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder_room"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="Room image" />

        <!-- Favorite Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_margin="12dp"
            app:icon="@drawable/heart_out_line"
            app:iconGravity="textStart"
            android:background="#00000000"
            android:contentDescription="ThÃªm vÃ o giá»"
            android:text=""
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:gravity="center"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:layout_constraintTop_toTopOf="@id/iv_room_image"
            app:layout_constraintEnd_toEndOf="@id/iv_room_image" />

        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Grand Royal Hotel"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@id/iv_room_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_price" />

        <!-- Price -->
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$180"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/tv_room_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Description -->
        <TextView
            android:id="@+id/tv_room_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wembley, London"
            android:textColor="@color/gray"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toBottomOf="@id/tv_room_name"
            app:layout_constraintStart_toStartOf="@id/tv_room_name"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Info: Capacity + Available -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="20dp"
            android:paddingBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_room_description"
            app:layout_constraintStart_toStartOf="@+id/tv_room_name"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/tv_capacity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ‘¤ 2 ngÆ°á»i"
                android:textSize="12sp"
                android:textColor="@color/gray" />

            <TextView
                android:id="@+id/tv_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŸ¢ 5 phÃ²ng"
                android:textSize="12sp"
                android:textColor="@color/success" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
