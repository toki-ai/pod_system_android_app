<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AssignmentPOD" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.AssignmentPOD" parent="Base.Theme.AssignmentPOD" />
    
    <!-- NavigationView without rounded corners -->
    <style name="Widget.App.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="shapeAppearance">@null</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.NavigationView</item>
        <item name="elevation">0dp</item>
    </style>
    
    <style name="ShapeAppearance.App.NavigationView" parent="">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Custom Bottom Navigation Style -->
    <style name="CustomBottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:elevation">8dp</item>
        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemActiveIndicatorStyle">@style/CustomBottomNavigationActiveIndicator</item>
        <item name="itemPaddingTop">12dp</item>
        <item name="itemPaddingBottom">12dp</item>
    </style>

    <style name="CustomBottomNavigationActiveIndicator" parent="">
        <item name="android:color">#334FC3F7</item>
        <item name="android:width">56dp</item>
        <item name="android:height">56dp</item>
        <item name="marginHorizontal">0dp</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.Full</item>
    </style>

    <!-- Custom Button Styles -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryTextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.AssignmentPOD.Splash" parent="Base.Theme.AssignmentPOD">
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Login Activity Theme -->
    <style name="Theme.AssignmentPOD.Login" parent="Base.Theme.AssignmentPOD">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>